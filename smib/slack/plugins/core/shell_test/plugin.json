{
  "name": "Shell Plugin Test",
  "author": "Sam Cork",
  "hooks": [
    {
      "event_type": "message",
      "event_arguments": {
        "keyword": "batch"
      },
      "script": "test.bat"
    },
    {
      "event_type": "event",
      "event_arguments": {
        "event": "http_get_batch"
      },
      "script": "test.bat"
    },
    {
      "event_type": "message",
      "event_arguments": {
        "keyword": "bash"
      },
      "script": "test.sh"
    }
  ]
}